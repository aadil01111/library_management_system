{% extends "base.twig" %}
{% block content %}

<input id="search" placeholder="Search books">

<table border="1">
<thead>
<tr>
<th>Title</th><th>Author</th><th>Category</th>
<th>Year</th><th>Price</th><th>Action</th>
</tr>
</thead>

<tbody id="results">
{% for b in books %}
<tr>
<td>{{ b.title }}</td>
<td>{{ b.author }}</td>
<td>{{ b.category }}</td>
<td>{{ b.year }}</td>
<td>{{ b.price }}</td>
<td>
<a href="edit.php?id={{ b.id }}">Edit</a>
<a href="delete.php?id={{ b.id }}">Delete</a>
</td>
</tr>
{% endfor %}
</tbody>
</table>

{% endblock %}
